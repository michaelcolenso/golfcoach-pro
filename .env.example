# GolfCoach Pro - Environment Variables Template

# Copy this file to .env and fill in your values

 

# ============================================

# Application

# ============================================

APP_ENV=development

APP_NAME=GolfCoach Pro

APP_VERSION=0.1.0

DEBUG=true

 

# ============================================

# API Configuration

# ============================================

API_HOST=0.0.0.0

API_PORT=8000

API_BASE_URL=http://localhost:8000

 

# Secret key for JWT signing (generate with: openssl rand -hex 32)

SECRET_KEY=your-secret-key-here-change-in-production

 

# JWT Settings

JWT_ALGORITHM=RS256

JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15

JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

 

# ============================================

# Database (PostgreSQL + TimescaleDB)

# ============================================

POSTGRES_HOST=localhost

POSTGRES_PORT=5432

POSTGRES_DB=golfcoach

POSTGRES_USER=golfcoach_user

POSTGRES_PASSWORD=change-this-password

 

# Connection string (auto-generated from above, or set directly)

DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

 

# Connection pool settings

DB_POOL_SIZE=20

DB_MAX_OVERFLOW=40

 

# ============================================

# Redis

# ============================================

REDIS_HOST=localhost

REDIS_PORT=6379

REDIS_PASSWORD=

REDIS_DB=0

REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

 

# Cache TTL (seconds)

CACHE_TTL_SHORT=300       # 5 minutes

CACHE_TTL_MEDIUM=3600     # 1 hour

CACHE_TTL_LONG=86400      # 24 hours

 

# ============================================

# MinIO (Object Storage)

# ============================================

MINIO_ENDPOINT=localhost:9000

MINIO_ACCESS_KEY=minioadmin

MINIO_SECRET_KEY=minioadmin

MINIO_BUCKET_NAME=golfcoach-videos

MINIO_SECURE=false

 

# ============================================

# Celery (Task Queue)

# ============================================

CELERY_BROKER_URL=redis://${REDIS_HOST}:${REDIS_PORT}/1

CELERY_RESULT_BACKEND=redis://${REDIS_HOST}:${REDIS_PORT}/2

 

# Worker concurrency

CELERY_WORKER_CONCURRENCY=4

 

# ============================================

# AI Services

# ============================================

 

# Anthropic (Claude)

ANTHROPIC_API_KEY=your-anthropic-api-key-here

CLAUDE_MODEL=claude-opus-4-5-20251101

CLAUDE_MAX_TOKENS=4096

CLAUDE_TEMPERATURE=0.3

 

# AI Cost limits (dollars per day)

AI_DAILY_BUDGET=100.00

 

# ============================================

# MediaPipe Configuration

# ============================================

MEDIAPIPE_MODEL_COMPLEXITY=2  # 0=lite, 1=full, 2=heavy

MEDIAPIPE_MIN_DETECTION_CONFIDENCE=0.5

MEDIAPIPE_MIN_TRACKING_CONFIDENCE=0.5

 

# ============================================

# Video Processing

# ============================================

VIDEO_MAX_SIZE_MB=100

VIDEO_MAX_DURATION_SECONDS=30

VIDEO_ALLOWED_FORMATS=mp4,mov,avi

VIDEO_PROCESSING_FPS=60

 

# FFmpeg path (auto-detected if not set)

FFMPEG_PATH=/usr/bin/ffmpeg

 

# ============================================

# File Storage

# ============================================

UPLOAD_DIR=/tmp/golfcoach/uploads

TEMP_DIR=/tmp/golfcoach/temp

MAX_UPLOAD_SIZE_MB=100

 

# File retention (days)

VIDEO_RETENTION_DAYS=365

TEMP_FILE_RETENTION_HOURS=24

 

# ============================================

# CORS

# ============================================

CORS_ORIGINS=http://localhost:3000,http://localhost:19006,exp://localhost:19000

CORS_ALLOW_CREDENTIALS=true

CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS

CORS_ALLOW_HEADERS=*

 

# ============================================

# Rate Limiting

# ============================================

RATE_LIMIT_ENABLED=true

RATE_LIMIT_DEFAULT=100  # requests per minute

 

# Tier-specific limits

RATE_LIMIT_FREE=60

RATE_LIMIT_PRO=120

RATE_LIMIT_ELITE=300

 

# ============================================

# Email (Optional - for notifications)

# ============================================

SMTP_HOST=smtp.gmail.com

SMTP_PORT=587

SMTP_USER=your-email@gmail.com

SMTP_PASSWORD=your-app-password

SMTP_FROM=noreply@golfcoachpro.com

 

# ============================================

# Monitoring & Logging

# ============================================

LOG_LEVEL=INFO

LOG_FORMAT=json

 

# Sentry (Error tracking)

SENTRY_DSN=

SENTRY_ENVIRONMENT=development

 

# Prometheus metrics

METRICS_ENABLED=true

METRICS_PORT=9090

 

# ============================================

# Payment (Stripe)

# ============================================

STRIPE_PUBLIC_KEY=pk_test_...

STRIPE_SECRET_KEY=sk_test_...

STRIPE_WEBHOOK_SECRET=whsec_...

 

# Price IDs

STRIPE_PRICE_PRO_MONTHLY=price_...

STRIPE_PRICE_PRO_YEARLY=price_...

STRIPE_PRICE_ELITE_MONTHLY=price_...

 

# ============================================

# Integrations

# ============================================

 

# TrackMan

TRACKMAN_CLIENT_ID=

TRACKMAN_CLIENT_SECRET=

 

# Arccos

ARCCOS_API_KEY=

 

# Apple Health

APPLE_HEALTH_CLIENT_ID=

 

# Google Fit

GOOGLE_FIT_CLIENT_ID=

GOOGLE_FIT_CLIENT_SECRET=

 

# ============================================

# Frontend (Mobile/Web)

# ============================================

EXPO_PUBLIC_API_URL=http://localhost:8000/api/v1

EXPO_PUBLIC_WS_URL=ws://localhost:8000/api/v1/realtime

EXPO_PUBLIC_SENTRY_DSN=

 

# Web app

NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

NEXT_PUBLIC_STRIPE_PUBLIC_KEY=${STRIPE_PUBLIC_KEY}

 

# ============================================

# Feature Flags

# ============================================

FEATURE_REAL_TIME_MODE=true

FEATURE_3D_VISUALIZATION=false

FEATURE_MULTI_ANGLE=false

FEATURE_COACH_PORTAL=false

FEATURE_INTEGRATIONS=false

 

# ============================================

# Development

# ============================================

# Auto-reload on code changes

RELOAD=true

 

# Show detailed SQL queries

SQL_ECHO=false

 

# Seed database with test data

SEED_DATABASE=true

 

# Skip AI calls in tests (use mocks)

MOCK_AI_IN_TESTS=true

 

# ============================================

# Security

# ============================================

# HTTPS only in production

HTTPS_ONLY=false

 

# Allowed hosts (comma-separated)

ALLOWED_HOSTS=localhost,127.0.0.1

 

# Session security

SESSION_COOKIE_SECURE=false

SESSION_COOKIE_HTTPONLY=true

SESSION_COOKIE_SAMESITE=lax

 

# ============================================

# Testing

# ============================================

TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/test_golfcoach

 

# ============================================

# Backup

# ============================================

BACKUP_ENABLED=false

BACKUP_S3_BUCKET=

BACKUP_AWS_ACCESS_KEY=

BACKUP_AWS_SECRET_KEY=

BACKUP_RETENTION_DAYS=30
